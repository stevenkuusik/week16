          <% }) %>
        </div>

        <div class="section">
          <h3>Huvialad</h3>
          <% cv.huvialad.forEach(h => { %>
            <p><%= h %></p>
          <% }) %>
        </div>

        <img id="carousel-img" class="chart-img" src="/<%= cv.karussell[0] %>" alt="Pilt">
        <div class="social"></div>
      </div>

      <div class="margin-right">
        <div class="section">
          <h3>Haridusk√§ik</h3>
          <% cv.haridus.forEach(h => { %>
            <p><strong><%= h.kool %></strong> ‚Äî <%= h.aasta %></p>
          <% }) %>
        </div>

        <div class="section">
          <h3>T√∂√∂kogemus</h3>
          <% cv.tootamine.forEach(t => { %>
            <p><strong><%= t.firma %></strong> ‚Äî <%= t.amet %> (<%= t.aasta %>)<br>
            <%= t.kirjeldus %></p>
          <% }) %>
        </div>

        <div class="right">
          <div class="section">
            <h3>T√§iendav info</h3>
            <p><b>Tugevad k√ºljed:</b> <%= cv.tugevad.join(", ") %></p>
            <p><b>N√µrgad k√ºljed:</b> <%= cv.norgad.join(", ") %></p>
            <p><b>Ajateenistus:</b> <%= cv.ajateenistus %></p>
            <p><b>Praktikale v√µimalik astuda:</b> <%= cv.praktika %></p>
          </div>
          <div class="social">
             <a href="https://instagram.com" target="_blank">
                <img src="/<%= cv.social.instagram %>" alt="Instagram">
             </a>
                <a href="https://facebook.com" target="_blank">
             <img src="/<%= cv.social.facebook %>" alt="Facebook">
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

<script>
  window.carouselImages = <%- JSON.stringify(cv.karussell) %>;
</script>
